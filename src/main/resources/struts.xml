<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
<constant name="struts.i18n.encoding" value="utf-8"></constant> 
	<package name="user" extends="struts-default" namespace="/">
		<!-- class属性里面不写action全路径了，因为写，action对象创建两次
			写spring配置的action的bean的id值
		 -->
		<!-- <action name="userAction" class="userAction"></action> -->
		<action name="user_*" class="userAction" method="{1}">
			<result name="success" type="chain">timeLine_pagination</result>
			<result name="error">/fail.jsp</result>
		</action>
		<!-- <action name="GetTimeLine" class="timeLineAction" method="getTimeLine">
			<result name="success">/success.jsp</result>
			<result name="error">/fail.jsp</result>
		</action> -->
		<action name="timeLine_*" class="timeLineAction" method="{1}">
			<result name="success">/success.jsp</result>
			<result name="error">/fail.jsp</result>
		</action>
	</package>
</struts>



